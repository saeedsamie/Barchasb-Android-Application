<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Barchasb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/backgroundColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/backgroundColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/backgroundColor</item>

        <!-- Text color -->
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- NoActionBar theme for full-screen activities, if needed -->
    <style name="Theme.Barchasb.NoActionBar" parent="Theme.Barchasb">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlays for AppBar and Popups, if needed -->
    <style name="Theme.Barchasb.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Barchasb.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
